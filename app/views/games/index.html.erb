<div class="top">
</div>
<div class="middle">
  <div id="start-game" class="states hidden"> Start game </div>
  <div id="searching-game" class="states hidden"> Searching... </div>
  <div id="accept-game" class="states hidden"> ACCEPT </div>
  <div id="game-end" class="states hidden">
    <div class="you-win" class="hidden">
      You win!
    </div>
    <div class="opponent-win" class="hidden">
      Opponent wins!
    </div>
  </div>

  <table id="game" align="center">
  </table>
  <div class="game-stats">
    <div class="player-card">
      <img>
      <div class="player-stats">
        <span class="player-name"> You </span>
        <span class="player-bombs"> Bombs: <span class="bombs-count" data-player="self"> 0 </span> </span>
      </div>
    </div>
    <div class="player-card">
      <img style="float:right;">
      <div style="float:right;" class="player-stats">
        <span class="player-name"> Enemy </span>
        <span class="player-bombs"> Bombs: <span class="bombs-count" data-player="opponent"> 0 </span> </span>
      </div>
    </div>
  </div>
  <%= $redis.hgetall(@current_user.uuid) %>
</div>
